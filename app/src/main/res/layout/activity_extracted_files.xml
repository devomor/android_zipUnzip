<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:background="#393e4a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_weight="0.92">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/linBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4">

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:layout_weight="0.22">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/linHome"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.37">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/home_page_icon"
                                app:tint="#7b7e86" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/linCompress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.37">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/home_compressed_files_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/linExtract"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.26">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_selected_button"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_margin="5dp"
                                android:weightSum="1">

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.65">

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/home_extracted_files_icon"
                                        app:tint="#ffffff" />
                                </LinearLayout>

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.35">

                                    <TextView
                                        android:textSize="12sp"
                                        android:textColor="#ffffff"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Extract"
                                        android:fontFamily="@font/overpass_semibold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.38" />
                </LinearLayout>

                <View
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_weight="0.08">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:background="#393e4a"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:layout_weight="0.75">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8">

                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="#a6a6ae"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="File Categories"
                                    android:fontFamily="@font/overpass_regular" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="3"
                                android:layout_weight="0.2">

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:id="@+id/linAllPhotos"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:weightSum="1"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3">

                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:background="@drawable/home_circle_gradiant_bg_image"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_gravity="center"
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/home_icon_all_image_main_page_icon" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.7">

                                        <TextView
                                            android:textSize="14sp"
                                            android:textColor="#ffffff"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="All Image"
                                            android:fontFamily="@font/overpass_semibold" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:id="@+id/linAllVideos"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:weightSum="1"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3">

                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:background="@drawable/home_circle_gradiant_bg_video"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_gravity="center"
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/home_icon_all_video_main_page_icon" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.7">

                                        <TextView
                                            android:textSize="14sp"
                                            android:textColor="#ffffff"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="All Videos"
                                            android:fontFamily="@font/overpass_semibold" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:id="@+id/linAllAudios"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:weightSum="1"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3">

                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:background="@drawable/home_circle_gradiant_bg_audio"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_gravity="center"
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/home_icon_all_audio_main_page_icon" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.7">

                                        <TextView
                                            android:textSize="14sp"
                                            android:textColor="#ffffff"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="All Audios"
                                            android:fontFamily="@font/overpass_semibold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:layout_weight="0.25">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="1"
                                android:layout_weight="0.9">

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:weightSum="1"
                                        android:layout_weight="0.5">

                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.8">

                                            <CheckBox
                                                android:gravity="center"
                                                android:layout_gravity="center"
                                                android:id="@+id/selectAllCheckBox"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:text=""
                                                android:layoutDirection="rtl"
                                                style="@style/CustomCheckbox01" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.2">

                                            <TextView
                                                android:textSize="14sp"
                                                android:textColor="#2a70fe"
                                                android:gravity="center"
                                                android:layout_gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:text="Select All"
                                                android:fontFamily="@font/overpass_semibold" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5">

                                        <TextView
                                            android:textSize="14sp"
                                            android:textColor="#a6a6ae"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="All Documents Files"
                                            android:fontFamily="@font/overpass_regular" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_searchview"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="0.5">

                                    <androidx.appcompat.widget.SearchView
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:id="@+id/searchCompress"
                                        android:background="@android:color/transparent"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:defaultQueryHint="Search File....." />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/fragment_storage_list"
                                        android:scrollbars="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="8dp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textSize="18sp"
                                        android:textColor="#393e4a"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:id="@+id/emptyMsg"
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="No Files Found"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/overpass_semibold" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center" />

        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
